@{
    ViewBag.Title = "系统登录";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@using (Html.BeginForm())
{
<div class="login">
    <div class="login-inner">
        <h1 class="login-title">登录VISUAL SMART</h1>
        @if (ViewBag.Error != null)
        {
            <div style="color:red;text-align:left; margin:20px;">@ViewBag.Error</div>
        }
        <div class="login-item mgb20" id="dvName">
            <input type="text" class="clearError " id="txtName" name="txtName" placeholder="请输入用户名" tabindex="1" value="@ViewBag.Name" />
            <a href="javascript:;" onclick="clearTxt('txtName')" class="clearIpt j-clearIpt"><i class="icon-remove"></i></a>
        </div>
        <div class="login-item mgb20" id="dvPwd">
            <input type="password" class="clearError" id="txtPwd" name="txtPwd" placeholder="请输入密码" tabindex="2" />
            <a href="javascript:;" onclick="clearTxt('txtPwd')" class="clearIpt j-clearIpt"><i class="icon-remove"></i></a>
        </div>
         
        @*<div class="clearfix mgb10" id="dvCode">
            <div class="login-item code fl">
                <input type="text" class="clearError" id="txtCode" placeholder="验证码" data-autohide="1" tabindex="3" />
                <a href="javascript:;" onclick="clearTxt('txtCode')" class="clearIpt j-clearIpt"><i class="icon-remove"></i></a>
            </div>
            <div class="code-img fl mgl5">
                <img src="img/verify.png" class="j-codeReresh" id="code-img-enti" />
            </div>
            <div class="fl mgl5">
                <a href="javascript:;" class="j-codeReresh" id="code-refresh">换一张</a>
            </div>
        </div>*@
        <div class="checkbox-group clearfix mgb20">
            <label class="fl">
                <input type="checkbox" id="rd_remember" name="rd_remember"  @ViewBag.Checked />记住密码
            </label>
            @*<a href="#" class="fr login-forgetlink">忘记密码？</a>*@
        </div>
        <div>
            
            <button id="btn_login" type="submit" class="login-btn" tabindex="4" style="cursor:pointer">登录</button>
         
        </div>
        <div class="login-locationnow">
            <a target="_blank" href="tencent://message/?uin=236735459&amp;Site=咨询&amp;Menu=yes" title="点击这里给我发消息">没有账号？联系客服</a>
        </div>
        <div class="Copyright">
            <span>© VISUAL SMART</span>
        </div>
    </div>
</div>
}
<script type="text/javascript">
    function clearTxt(name) {
        $("#" + name).val('');
    }
    $(function () {
        $("#btn_login").click(function () {
            var txtName = $("#txtName").val();
            var txtPwd = $("#txtPwd").val();
            
            $(".login-item").removeClass("error");
            if (txtName == "") {
                $("#dvName").addClass("error");
                $("#txtName").focus();
            }
            else if (txtPwd == "") {
                $("#dvPwd").addClass("error");
                $("#txtPwd").focus();
            }            
            else {                 
                return true;
            }
            return false;
        });
        $(".login-item").click(function () {
            $(".login-item").removeClass("error");
        });

    });
</script>
