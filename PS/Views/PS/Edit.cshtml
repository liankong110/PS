                LineId: LineId,
                ProLineNo: lineNo,
                ProDate: proDate,
                FinalMorningNum: zbPeople,
                FinalMiddleNum: mbPeople,
                FinalEveningNum: wbPeople
            };

        var goodsList = [];
        var good = {};
        var allGoodCount = $("#allGoodCount").val();
        for (var i = 1; i <= allGoodCount; i++) {
            var Index = $("#Index" + i).val();
            var GoodNo = $("#GoodNo" + i).html();
            var GoodName = $("#GoodName" + i).html();
            var SType = $("#SType" + i).html();
            var ShipTo = $("#ShipTo" + i).html();
            var PackNum = $("#PackNum" + i).html();
            var Channeng = $("#Channeng" + i).html();
            var Qty = $("#Qty" + i).html();
            var StartTime = $("#StartTime" + i).val();
            var EndTime = $("#EndTime" + i).val();
            console.log(Qty);
            goodsList.push(
                {
                    Qty: Qty,
                    ProOrderIndex: Index,
                    GoodNo: GoodNo,
                    GoodName: GoodName,
                    STypeString: SType,
                    ShipTo: ShipTo,
                    PackNum: PackNum,
                    Channeng: Channeng,
                    StartTime: StartTime,
                    EndTime: EndTime
                }
               );
        }
        console.log(JSON.stringify(goodsList));
        var url = "/PS/Save";
        $.ajax({
            data: { '__RequestVerificationToken': $('input[name=__RequestVerificationToken]').val(), Pro_PS: JSON.stringify(Pro_PS), Pro_PSDetail: JSON.stringify(goodsList) },
            url: url,
            type: 'post',
            async: false,
            cache: false,
            success: function (data) {
                if (data.Mess == "success") {
                    //如果没有找到对应的人数产能的信息则情况
                    alert("保存成功！");
                    window.location.href = "/PS/Index";
                }

            }
        });

    }

