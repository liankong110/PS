    function changeTime(type, i, value) {

        var date;
        var channeng = $("#Channeng" + i).html();
        var qty = $("#Qty" + i).html();
        var sum = 0;
        if (channeng == 0) {
            sum = 0;
        }
        else {
            sum = qty / channeng * 60 * 60
        }

        //1 开始时间  2 结束时间
        if (type == 1) {
            date = new Date($("#StartTime" + i).val())
            var newData = new Date(date.getTime() + 1000 * sum);
            var EndTime = $("#EndTime" + i).val(newData.format('yyyy-MM-dd hh:mm:ss'));

        } else {
            date = new Date($("#EndTime" + i).val())
            var newData = new Date(date.getTime() - 1000 * sum);
            var EndTime = $("#StartTime" + i).val(newData.format('yyyy-MM-dd hh:mm:ss'));
        }

    }


