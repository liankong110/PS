                sum = 0;
            }
            else {
                sum = qty / channeng * 60 * 60
            }

            var start = $(tr[i].cells[8]).find("input").val(startDate.format('yyyy-MM-dd hh:mm:ss'));

            startDate = new Date(startDate.getTime() + 1000 * sum);
            var end = $(tr[i].cells[9]).find("input").val(startDate.format('yyyy-MM-dd hh:mm:ss'));
            console.log(start + "---" + end);

        }
    }

</script>
