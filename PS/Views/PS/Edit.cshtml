        var mbPeople = $("#FinalMiddleNum").val();
        var wbPeople = $("#FinalEveningNum").val();

        var LineId = $("#LineNo").val();
        var proDate = $("#ProDate").val();
        var lineNo = $("#LineNo").find("option:selected").text()
        var Pro_PS =
