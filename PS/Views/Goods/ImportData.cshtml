
@{
    ViewBag.Title = "Excel导入数据";
}

<div class="page-content">

    <div class="page-header">
        <h1>
            产品信息Excel导入数据
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                请上传产品信息
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-6 col-sm-12">


            <div class="col-xs-12">
                <input type="hidden" name="server" id="server"  value="/Goods/UploadFile"/>
                <input type="hidden" name="DemoFile" id="DemoFile" />
                <input type="hidden" name="Title" id="Title" />
                <div class="form-group">
                    <label class="col-sm-1 control-label no-padding-right" for="RoleName"><span style="color:red;">*</span>Excel文件:</label>
                    <div class="col-sm-9">
                        <div id="uploader" class="wu-example">
                            <!--用来存放文件信息-->
                            <div id="thelist" class="uploader-list"></div>

                            <div class="btns">
                                <div id="picker">选择文件,导入产品信息</div>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="hr hr-18 dotted hr-double"></div>
    @Html.AntiForgeryToken()
    <h3>模板格式如下：</h3>
    <img src="~/Content/images/Good.png" />
    
    <div class="hr hr-18 dotted hr-double"></div>

</div>
<link href="~/Scripts/webuploader-0.1.5/webuploader.css" rel="stylesheet" type="text/css" />
<!--引入JS-->
<script src="~/Scripts/webuploader-0.1.5/webuploader.js" type="text/javascript"></script>
<script src="~/Scripts/webuploader-0.1.5/ods.js"></script>
