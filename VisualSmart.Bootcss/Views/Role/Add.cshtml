@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VisualSmart.Domain.SetUp.RoleDomain
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="table-responsive panel panel-primary">
            <div class="panel-heading" role="tab" id="headingOne">
                <div class="panel-title">
                    <strong>角色信息-添加</strong>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                if (ViewBag.Error == "0")
                {
                    <div class="alert alert-danger" style="margin-bottom:0px;padding:10px;">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>添加失败！</strong>
                    </div>
                }
                if (ViewBag.Error == "1")
                {
                    <div class="alert alert-success" style="margin-bottom:0px;padding:10px;">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>添加成功，可继续添加！</strong>
                    </div>
                }
            }
            <table class="table table-condensed panel-body">
                <tr>
                    <td><label for="loginId"><span style="color:red;">*</span>角色名称:</label></td>
                    <td>@Html.TextBoxFor(t => t.RoleName, new { @class = "form-control", @data_container = "body", @data_toggle = "popover", @data_placement = "bottom", @data_content = "请输入角色名称", @data_trigger = "focus" })</td>
                </tr>
                <tr>
                    <td><label for="loginPwd"><span style="color:red;"></span>角色描述:</label></td>
                    <td>@Html.TextAreaFor(t => t.RoleDec, new { @class = "form-control", @data_container = "body", @data_toggle = "popover", @data_placement = "bottom", @data_content = "请输入角色描述", @data_trigger = "focus" })</td>
                </tr>
            </table>

        </div>
        <div class="form-inline panel-body" style="margin-left: auto;margin-right: auto;">
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block" value="添加" id="btnSave" />
            </div>
            <div class="form-group">
                <input type="reset" class="btn btn-default btn-block" value="重置" />
            </div>
            <div class="form-group">
                <a class="btn btn-default btn-block" href="/Role/Index">返回</a>
            </div>
        </div>

    </div>
